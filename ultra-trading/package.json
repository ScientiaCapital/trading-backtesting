{
  "name": "ultra-trading",
  "type": "module",
  "version": "1.0.0",
  "description": "ULTRA Trading Platform - Next-gen trading with AI",
  "scripts": {
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "deploy": "npm run build && npm run start",
    "lint": "NODE_OPTIONS=--max-semi-space-size=256 eslint . --fix --max-warnings=0",
    "lint:check": "NODE_OPTIONS=--max-semi-space-size=256 eslint . --max-warnings=50",
    "lint:strict": "NODE_OPTIONS=--max-semi-space-size=256 eslint . --max-warnings=0",
    "type-check": "tsc --noEmit --strict --project tsconfig.eslint.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:alpaca": "tsx scripts/test-alpaca.ts",
    "validate": "npm run type-check && npm run lint:check && npm run test",
    "validate:build": "tsx scripts/validate-build.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:init": "tsx scripts/db-init.ts",
    "db:migrate": "tsx scripts/db-init.ts",
    "market:prep": "tsx scripts/market-prep.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.29.0",
    "@google/generative-ai": "^0.21.0",
    "@hono/node-server": "^1.12.2",
    "@ixjb94/indicators": "^1.2.4",
    "hono": "^4.8.9",
    "nanoid": "^5.1.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@alpacahq/alpaca-trade-api": "^3.1.3",
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "dotenv": "^17.2.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.20.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.38.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
