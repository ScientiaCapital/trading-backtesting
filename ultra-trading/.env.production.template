# ULTRA Trading Platform - Production Environment Variables
# Copy this file to .env.production and fill in your values
# DO NOT commit .env.production to git

# Alpaca Live Trading API (Production)
# WARNING: These are LIVE trading credentials - use with extreme caution
ALPACA_API_KEY=your_production_alpaca_api_key
ALPACA_API_SECRET=your_production_alpaca_api_secret

# Authentication & Security (CRITICAL - Use strong values)
JWT_SECRET=your_super_secure_jwt_secret_for_production_minimum_64_characters
ENCRYPTION_KEY=your_super_secure_encryption_key_for_production_32_chars

# External Services
POLYGON_API_KEY=your_polygon_api_key_for_production
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_for_production

# AI Services (Optional)
OPENAI_API_KEY=your_openai_api_key_for_production
ANTHROPIC_API_KEY=your_anthropic_api_key_for_production

# Database & Analytics
POSTHOG_API_KEY=your_posthog_api_key_for_production
SENTRY_DSN=your_sentry_dsn_for_production

# Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_for_production
DISCORD_WEBHOOK_URL=your_discord_webhook_url_for_production
SENDGRID_API_KEY=your_sendgrid_api_key_for_production

# Third-party Integrations
STRIPE_SECRET_KEY=your_stripe_secret_key_for_production
TWILIO_AUTH_TOKEN=your_twilio_auth_token_for_production

# Custom Domain
CUSTOM_DOMAIN=ultra-trading.your-domain.com

# Production Security Settings
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000
CORS_ORIGINS=https://ultra-trading.your-domain.com,https://app.ultra-trading.your-domain.com

# Monitoring & Alerting
ALERT_EMAIL=alerts@your-domain.com
ALERT_PHONE=+1234567890
ERROR_THRESHOLD=10
PERFORMANCE_THRESHOLD_MS=5000